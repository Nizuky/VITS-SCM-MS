#!/usr/bin/env php
<?php

use Illuminate\Foundation\Application;
use Symfony\Component\Console\Input\ArgvInput;

define('LARAVEL_START', microtime(true));

// Register the Composer autoloader...
require __DIR__.'/vendor/autoload.php';

// Bootstrap Laravel and handle the command...
/** @var Application $app */
$app = require_once __DIR__.'/bootstrap/app.php';

$status = 0;
try {
	$status = $app->handleCommand(new ArgvInput);
} catch (\Throwable $e) {
	// Some console input parsing errors (for example from unsupported --columns option)
	// throw a visible message to the console but avoid bootstrapping the full
	// exception handler which may write into application logs. This keeps
	// artisan invocations that pass invalid console options from polluting
	// storage/logs/laravel.log.
	fwrite(STDERR, "Error: " . $e->getMessage() . PHP_EOL);
	// Return non-zero exit code to indicate failure
	$status = $e->getCode() ?: 1;
}

exit($status);